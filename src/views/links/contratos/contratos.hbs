{{> link-navigation }}
<div class="container p-2 overflow-auto">    

    
    <div class="row m-4">
        <div class="col-9">
            <button id="btnExport" onclick="exportToExcel()">            
            <i class="fa-solid fa-floppy-disk"></i>
            Exportar tabla
        </button>
        </div>

        <!-- %%%%%%%%%%%%%% Boton Modal %%%%%%%%%%%%%% -->

        <div class="col-2 justify-content-md-end">
            <button class="btn btn-success" data-toggle="modal" data-target="#formModal{{@index}}"><i class="fa-solid fa-circle-plus"></i> Crear Contrato</button>
        </div>       
    </div>

    {{>modalForm}}


    <div class="row">      

        <table id="tableID" class="table table-striped table-hover" data-toolbar="#toolbar">
            <thead>
                <tr>
                    <th data-sortas="case-insensitive">No. de Contrato</th>
                    <th data-sortas="numeric">AÃ±o</th>
                    <th data-sortas="case-insensitive">Objeto</th>
                    <th data-sortas="numeric">Valor Inicial</th>
                    <th data-sortas="numeric">Valor Adiciones</th>
                    <th data-sortas="numeric">Valor Final</th>
                    <th data-sortas="case-insensitive">Estado</th>
                    <th>Fecha de Firma</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Fin</th>
                    <th data-sortas="case-insensitive">Contratista</th>
                    <th data-sortas="case-insensitive">Subcuenta</th>
                    <th>Acciones</th>                    
                </tr>
            </thead>
            <tbody>
                {{#each registros}}
                <tr>
                    <td>{{this.NoContrato}}</td>
                    <td>{{this.anio}}</td>
                    <td>{{this.objeto}}</td>
                    <td>{{this.valorInicial}}</td>
                    <td>{{this.valoradiciones}}</td>
                    <td>{{this.valorFinal}}</td>
                    <td>{{this.nombreest}}</td>
                    {{!-- <td>{{this.fechaFirma}}</td> --}}
                    <td>{{this.fechaFirma}}</td>
                    <td>{{this.fechaInicio}}</td>
                    <td>{{this.fechaFin}}</td>
                    <td>{{this.nombrecont}}</td>
                    <td>{{this.nombresub}}</td>
                    <td>
                        <span><button><i class="fa-solid fa-eye"></i></button></span>                        
                        <span><button><i class="fa-solid fa-pen-to-square"></i></button></span>
                        <span><button><i class="fa-solid fa-trash-can"></i></button></span>
                    </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>

    </div>





</div>